{
  "compilerOptions": {
    "target": "es6",
    "lib": ["ES2024"],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "paths": {
      "@app/*": ["./src/*"],
    }

  }
}
